    "keywords": ["async", "fibers", "amphp", "reactphp", "swoole", "concurrency", "research", "benchmarks"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alireza Aminzadeh",
            "email": "alireza.aminzadeh@hotmail.com",
            "homepage": "https://github.com/syeedalireza"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.18",
        "amphp/amp": "^3.0",
        "react/event-loop": "^1.5",
        "react/promise": "^3.0",
        "phpbench/phpbench": "^1.2"
